---
interface Props {
  title: string;
  description: string;
  icon: string;
}

const { title, description, icon } = Astro.props;
---

<div class="group rounded-xl border border-border bg-bg-card p-6 transition-colors hover:border-border-bright">
  <div class="mb-4 flex h-10 w-10 items-center justify-center rounded-lg bg-accent/10 text-accent-bright text-lg">
    {icon}
  </div>
  <h3 class="text-base font-semibold text-fg mb-2">{title}</h3>
  <p class="text-sm text-fg-muted leading-relaxed">{description}</p>
</div>
